// ============================== CHAINGUNNER (v1.1.1) ==============================
// Continuous A_CPosAttack/A_CPosRefire loop. Cadence unchanged.

actor CG_T2 : ChaingunGuy
{
  Tag "Raking Chaingunner (II)"
  Translation "TINT_TIER2"
  Health 84
  PainChance 160
  Speed 8
  Obituary "%o was perforated by a Raking Chaingunner (II)."
  DropItem "Chaingun", 255
  DropItem "Clip",     176, 10
  States
  {
  Missile:
    CPOS E 8 A_FaceTarget
    Goto Fire
  Fire:
    CPOS F 3 A_CPosAttack
    CPOS E 3 A_FaceTarget
    CPOS F 0 A_CPosRefire
    Goto Fire
  }
}

