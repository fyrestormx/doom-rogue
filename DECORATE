// =============================== LOST SOUL (v1.1.2) ===============================
// Keep actor names (LSO_T2..LSO_T5). Vanilla attack frames kept (C→D SkullAttack; loop CD).
// Randomized damage: base Damage=3 (stock), with tiered chance to apply a short PowerDamage buff.
// T2: 33% ×1.33, T3: 50% ×1.67, T4: 66% ×2.00, T5: 75% ×2.33.

// ---- transient bite-boost powerups (auto-activate; not map pickups) ----
actor LSO_BiteBoost_T2 : PowerDamage
{
  +INVENTORY.AUTOACTIVATE
  Inventory.MaxAmount 1
  Powerup.Duration 25
  DamageFactor "Normal", 1.3333
}
actor LSO_BiteBoost_T3 : PowerDamage
{
  +INVENTORY.AUTOACTIVATE
  Inventory.MaxAmount 1
  Powerup.Duration 25
  DamageFactor "Normal", 1.6667
}
actor LSO_BiteBoost_T4 : PowerDamage
{
  +INVENTORY.AUTOACTIVATE
  Inventory.MaxAmount 1
  Powerup.Duration 25
  DamageFactor "Normal", 2.0
}
actor LSO_BiteBoost_T5 : PowerDamage
{
  +INVENTORY.AUTOACTIVATE
  Inventory.MaxAmount 1
  Powerup.Duration 25
  DamageFactor "Normal", 2.3333
}

// ------------------------------- TIER II -----------------------------------
actor LSO_T2 : LostSoul
{
  Tag "Ramming Lost Soul (II)"
  Translation "TINT_TIER2"
  Health 110
  Speed 9
  PainChance 220
  Damage 3
  Obituary "%o was smashed head-on by a Ramming Lost Soul (II)."
  States
  {
  Missile:
    SKUL C 10 BRIGHT A_FaceTarget
    SKUL D 0  BRIGHT A_Jump(85, "ChargeBuff") // ~33%
    SKUL D 4  BRIGHT A_SkullAttack(22)
    SKUL CD 4 BRIGHT
    Goto Missile+2

  ChargeBuff:
    TNT1 A 0 A_GiveInventory("LSO_BiteBoost_T2",1)
    SKUL D 4  BRIGHT A_SkullAttack(22)
    SKUL CD 4 BRIGHT
    Goto Missile+2
  }
}

