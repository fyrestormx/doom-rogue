// =============================== ZOMBIEMAN (v1.1.1) ===============================
// Vanilla pistol cadence. Volleys by tier = 2/3/4/5.

actor ZM_T2 : ZombieMan
{
  Tag "Flanking Zombieman (II)"
  Translation "TINT_TIER2"
  Health 24
  PainChance 190
  Speed 9
  DropItem "Clip", 255, 10
  DropItem "Clip", 160, 5
  States
  {
  Missile:
    POSS E 10 A_FaceTarget
    POSS F 4  A_PosAttack
    POSS E 10 A_FaceTarget
    POSS F 4  A_PosAttack
    POSS E 10
    Goto See
  }
  Obituary "%o was riddled by a Flanking Zombieman (II)."
}

