  States
  {
  Melee:
    BOS2 E 8 A_FaceTarget
    BOS2 F 8 A_FaceTarget
    BOS2 G 8 A_BruisAttack
    Goto See

  Missile:
    BOS2 E 8 A_FaceTarget
    BOS2 F 8 A_FaceTarget
    BOS2 G 8 A_BruisAttack
    BOS2 E 8 A_FaceTarget
    BOS2 F 8 A_FaceTarget
    BOS2 G 8 A_BruisAttack
    Goto See
  }
}

